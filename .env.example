# ============================================
# OPENAI CONFIGURATION
# ============================================
OPENAI_API_KEY=your-openai-api-key-here

# ============================================
# MODEL SELECTION (Optional - defaults shown)
# ============================================
# CLASSIFIER_MODEL=openai:gpt-4o-mini
# DIRECTOR_MODEL=openai:gpt-4o
# EXECUTOR_MODEL=openai:gpt-4o-mini

# ============================================
# BUSINESS RULES (Optional - defaults shown)
# ============================================
# ENTERPRISE_THRESHOLD=30
# HISTORY_WINDOW_SIZE=20

# ============================================
# COST CONTROLS & SAFETY (Optional - defaults shown)
# ============================================
# DAILY_COST_LIMIT_USD=100.0
# HOURLY_COST_LIMIT_USD=20.0
# MAX_RETRIES=3
# RETRY_MIN_WAIT_SECONDS=2
# RETRY_MAX_WAIT_SECONDS=10

# ============================================
# COMPLIANCE & SECURITY (Optional - defaults shown)
# ============================================
# ENABLE_PII_FILTERING=true
# LOG_LEVEL=INFO
# ENABLE_STRUCTURED_LOGGING=false

# ============================================
# ENVIRONMENT (Optional - defaults shown)
# ============================================
# ENVIRONMENT=development

# ============================================
# MONGODB CONFIGURATION
# ============================================
MONGODB_URI=mongodb://localhost:27017
MONGODB_DATABASE=gp_data_v4
# MONGODB_MAX_POOL_SIZE=10
# MONGODB_MIN_POOL_SIZE=1
# MONGODB_SERVER_SELECTION_TIMEOUT_MS=5000

# ============================================
# DATA RETENTION & ARCHIVAL (Optional - defaults shown)
# ============================================
# MESSAGE_RETENTION_DAYS=365
# ENABLE_MESSAGE_ARCHIVAL=true
